{% extends 'Back.html.twig' %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Mail</th>
                <th>Num_tel</th>
                <th>Adresse</th>
                <th>Mdp</th>
                <th>Role_id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.mail }}</td>
                <td>{{ user.numTel }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.mdp }}</td>
                                <td>{{ user.role }}</td>

                <td>
                    <a href="{{ path('app_back_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_back_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_new') }}">Create new</a>
{% endblock %}
