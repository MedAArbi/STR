<!DOCTYPE html>

<title>Reservation index</title>

{% block body %}
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Model</th>
                <th>Qte</th>
                <th>Prix</th>
                <th>Datersv</th>
                <th>Heurersv</th>
                <th>Periode</th>
                <th>Impot</th>
                <th>Total</th>
                <th>Mtotal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.model }}</td>
                <td>{{ reservation.qte }}</td>
                <td>{{ reservation.prix }}</td>
                <td>{{ reservation.datersv }}</td>
                <td>{{ reservation.heurersv }}</td>
                <td>{{ reservation.periode }}</td>
                <td>{{ reservation.impot }}</td>
                <td>{{ reservation.total }}</td>
                <td>{{ reservation.mtotal }}</td>
                <td>
                    <a href="{{ path('app_resrvation_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('app_resrvation_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_resrvation_new') }}">Create new</a>
{% endblock %}
